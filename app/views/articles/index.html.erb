
<div class="nav-item-links">
  <%= link_to 'queries', "/queries", class: 'header-nav' %>
</div>

<div class="articles">
  <h1>articles <%= @ip %> </h1>
  <%= form_with(url: articles_path, method: "GET", data: { controller: "search", turbo_frame: "articles", turbo_action: "advance" }) do |form| %>
    <%= form.label :query, "Search by Title:" %>
    <%= form.text_field :query, data: { action: "input->search#searching" } %>
  <% end %>

  <!-- Rendering the new partial here -->
  <%= render "articles", articles: @articles %>
</div>


